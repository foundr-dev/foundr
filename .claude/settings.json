{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "startup",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --cwd $PROJECT_ROOT src/scripts/hooks/session-start.ts"
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --cwd $PROJECT_ROOT src/scripts/hooks/bash-failure.ts"
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "bun run --cwd $PROJECT_ROOT src/scripts/hooks/git-hint.ts"
          }
        ]
      }
    ]
  }
}
